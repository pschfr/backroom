source 'https://rubygems.org'

# Barcode generator
gem 'barby'

# The ever so popular front end framework
gem 'bootstrap'

# Unfortunately, necessary for Bootstrap's JS
gem 'jquery-rails'

# Additional table plugin for Bootstrap's tables
gem 'rails-assets-bootstrap-table', source: 'https://rails-assets.org'

# CSS preprocessor
gem 'sass'

# DSL for quickly creating web apps
gem 'sinatra'

# Asset (CSS and JS) handler
gem 'sprockets'

# Fast and light web server
gem 'thin'
