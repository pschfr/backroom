source 'https://rubygems.org'

# Barcode generator
gem 'barby'

# The ever so popular front end framework
gem 'bootstrap'

# Unfortunately, necessary for Bootstrap's JS
gem 'jquery-rails'

# These gems come from a different source
source 'https://rails-assets.org' do
  # Additional table plugin for Bootstrap's tables
  gem 'rails-assets-bootstrap-table'
  # Image lazy loading functionality
  gem 'rails-assets-echojs'
end

# Only loaded in dev or test env
group :development, :test do
  # Relaunches the program on filesystem change
  gem 'rerun'
end

# CSS preprocessor
gem 'sass'

# DSL for quickly creating web apps
gem 'sinatra'

# Asset (CSS and JS) handler
gem 'sprockets'
